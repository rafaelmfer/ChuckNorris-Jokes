<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="8dp"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/tv_generic_toolbar_left_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/generic_toolbar_back_button_acs"
        android:gravity="center"
        android:text="@string/generic_toolbar_back_button_acs"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/tv_generic_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="4dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_generic_toolbar_right_button"
        app:layout_constraintStart_toEndOf="@id/tv_generic_toolbar_left_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="60dp"
        app:layout_goneMarginStart="60dp"
        tools:text="titulo toolbar"
        tools:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/tv_generic_toolbar_right_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/generic_toolbar_close_button_acs"
        android:gravity="center"
        android:text="@string/generic_toolbar_close_button_acs"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:textColor="@android:color/holo_orange_dark" />
</merge>